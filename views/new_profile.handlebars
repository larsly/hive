<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create Profile</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="hive-name">Hive Name:</label>
        <input class="form-input" type="text" id="hive-name" name="hive-name" />
      </div>
      <div class="form-group">
        <label for="profile-description">About You:</label>
        <input class="form-input" type="text" id="profile-description" name="profile-description" />
      </div>
      <div class="form-group">
        <label for="profile-social">Social Media:</label>
        <textarea class="form-input" id="profile-social" name="profile-social"></textarea>
      </div>
      <div class="form-group">
        <button type="profile-submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

{{!-- not sure if this is needed here --}}
  {{#if Events.length}}
  <div class="col-md-6 project-list">
    <h3>My Events:</h3>

    {{#each event as |event|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/event/{{event.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{event.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
